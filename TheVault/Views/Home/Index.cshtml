

    @{
        ViewBag.Title = "Home Page";
    }

    <div class="jumbotron">
        <h1>The Vault </h1>
        <p class="lead">The Vault is a buy and sell website for sneakers. From the rarest exclusive to your everyday sneaker. The vault is committed to being the most accurate sneaker database to help our users find the perfect pair. </p>
        <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    </div>


   
    <div class="top-buffer">
        <h4>Make your payment!</h4>
        <form action="/Home/Charge" method="POST">
            <script src="//checkout.stripe.com/v2/checkout.js"
                    class="stripe-button"
                    data-key="Stripe_Test_Key"
                    data-locale="auto"
                    data-description="The Vault Payment"
                    data-amount="15000">
            </script>
            <article>
                <label>Amount: $150.00</label>
            </article>
        </form>
    </div>

